{
  "name": "grounds-keeper",
  "version": "0.0.1",
  "description": "GraphQL monitoring",
  "main": "lib/index.js",
  "scripts": {
    "test": "nyc ava tests/**/*.test.js",
    "build": "rimraf lib && babel src --out-dir lib",
    "prepublish": "npm run test && npm run build"
  },
  "author": "Adam Wilkinson <adwilk@mac.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adwilk/grounds-keeper.git"
  },
  "license": "MIT",
  "dependencies": {
    "graphql": "^0.8.2",
    "graphql-tools": "^0.9.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.1.8",
    "babel-register": "^6.18.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 6
          }
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ]
  }
}
